{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ],
    "ordered-imports": [
      false
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "no-var-requires": false,
    "no-console": false,
    "object-literal-sort-keys": false,
    "whitespace": [
      true,
      "check-module"
    ],
    "trailing-comma": [true, {
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      },
      "esSpecCompliant": true
    }]
  }
}
